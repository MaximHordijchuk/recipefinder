<h1 class="search-label">Searching for "<%= @search_term %>"</h1>
<table class="recipes">
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th id="rate">Rate</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= link_to image_tag(recipe['image_url'], width: 100, height: 100), recipe['f2f_url'], :target => '_blank' %></td>
      <td><%= link_to raw(recipe['title']), recipe['f2f_url'], :target => '_blank' %></td>
      <td><%= recipe['social_rank'].round(1) %></td>
    </tr>
  <% end %>
</table>